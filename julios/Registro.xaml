<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="julios.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro"
               
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese su apellido"/>
            <Entry x:Name="txtNota" Placeholder="Ingrese su Nota Final" Keyboard="Numeric"/>
            
            <Button x:Name="btnInformacion" Text="Mostar Informacion" Clicked="btnInformacion_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>